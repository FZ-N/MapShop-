<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="#92B7E0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:foregroundGravity="left"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="220dp"
            android:foregroundGravity="right"
            android:src="@drawable/user" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:text="Mes magasins"
        android:textColor="#131a46"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/marjane"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            app:srcCompat="@drawable/ddd" />

        <ImageView
            android:id="@+id/bim"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:srcCompat="@drawable/aaa" />

        <ImageView
            android:id="@+id/atakadao"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:srcCompat="@drawable/ccc" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            app:srcCompat="@drawable/bbb"  />

    </LinearLayout>

    <ImageView
        android:id="@+id/logout"
        android:layout_width="78dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="250dp"
        android:foregroundGravity="right"
        android:src="@drawable/logout" />

</LinearLayout>